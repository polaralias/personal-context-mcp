// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WorkStatusEvent {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @map("created_at")
  source    String
  status    String    // 'working' | 'off' | 'travel' | etc.
  reason    String?
  expiresAt DateTime? @map("expires_at")

  @@map("work_status_events")
  @@index([createdAt(sort: Desc)])
}

model LocationEvent {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @map("created_at")
  source    String
  latitude  Float     @map("lat")
  longitude Float     @map("lon")
  name      String?
  expiresAt DateTime? @map("expires_at")

  @@map("location_events")
  @@index([createdAt(sort: Desc)])
}

model ScheduledStatus {
  date      String   @id // YYYY-MM-DD
  patch     Json     // Stores Partial<Status>
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("scheduled_status")
}

model BankHolidayCache {
  id        Int      @id @default(autoincrement())
  region    String
  year      Int
  payload   Json
  fetchedAt DateTime @default(now()) @map("fetched_at")

  @@unique([region, year])
  @@map("bank_holidays_cache")
}

model Connection {
  id              String   @id @default(uuid())
  displayName     String?  @map("display_name")
  configEncrypted String   @map("config_encrypted")
  configVersion   Int?     @default(1) @map("config_version")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  authCodes       AuthCode[]

  @@map("connections")
}

model AuthCode {
  id                  Int       @id @default(autoincrement())
  codeHash            String    @unique @map("code_hash")
  connectionId        String    @map("connection_id")
  redirectUri         String    @map("redirect_uri")
  state               String
  codeChallenge       String    @map("code_challenge")
  codeChallengeMethod String    @map("code_challenge_method")
  expiresAt           DateTime  @map("expires_at")
  usedAt              DateTime? @map("used_at")
  createdAt           DateTime  @default(now()) @map("created_at")

  connection          Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  @@map("auth_codes")
  @@index([codeHash])
}

model RegisteredClient {
  id                      String   @id @default(uuid())
  clientName              String?  @map("client_name")
  redirectUris           String[] @map("redirect_uris")
  tokenEndpointAuthMethod String   @default("none") @map("token_endpoint_auth_method")
  grantTypes              String[] @map("grant_types")
  responseTypes           String[] @map("response_types")
  scope                   String?
  createdAt               DateTime @default(now()) @map("created_at")
  updatedAt               DateTime @updatedAt @map("updated_at")

  @@map("registered_clients")
}
