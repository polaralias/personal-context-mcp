generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model WorkStatusEvent {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @map("created_at")
  source    String
  status    String    // 'working' | 'off' | 'travel' | etc.
  reason    String?
  expiresAt DateTime? @map("expires_at")

  @@map("work_status_events")
  @@index([createdAt(sort: Desc)])
}

model LocationEvent {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @map("created_at")
  source    String
  latitude  Float     @map("lat")
  longitude Float     @map("lon")
  name      String?
  expiresAt DateTime? @map("expires_at")

  @@map("location_events")
  @@index([createdAt(sort: Desc)])
}

model ScheduledStatus {
  date      String   @id // YYYY-MM-DD
  patch     Json     // Stores Partial<Status>
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("scheduled_status")
}

model BankHolidayCache {
  id        Int      @id @default(autoincrement())
  region    String
  year      Int
  payload   Json
  fetchedAt DateTime @default(now()) @map("fetched_at")

  @@unique([region, year])
  @@map("bank_holidays_cache")
}

model ClientSession {
  id            Int      @id @default(autoincrement())
  token         String   @unique
  connectionUrl String?  @map("connection_url")
  config        Json?
  expiresAt     DateTime @map("expires_at")
  createdAt     DateTime @default(now()) @map("created_at")

  @@map("client_sessions")
}

model AuthCode {
  id           Int      @id @default(autoincrement())
  code         String   @unique
  callbackUrl  String   @map("callback_url")
  state        String?
  sessionToken String   @map("session_token")
  expiresAt    DateTime @map("expires_at")
  createdAt    DateTime @default(now()) @map("created_at")

  @@map("auth_codes")
}
