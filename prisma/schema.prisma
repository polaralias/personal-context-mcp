// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Keeping existing operational models
model WorkStatusEvent {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @map("created_at")
  source    String
  status    String    // 'working' | 'off' | 'travel' | etc.
  reason    String?
  expiresAt DateTime? @map("expires_at")

  @@map("work_status_events")
  @@index([createdAt(sort: Desc)])
}

model LocationEvent {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now()) @map("created_at")
  source    String
  latitude  Float     @map("lat")
  longitude Float     @map("lon")
  name      String?
  expiresAt DateTime? @map("expires_at")

  @@map("location_events")
  @@index([createdAt(sort: Desc)])
}

model ScheduledStatus {
  date      String   @id // YYYY-MM-DD
  patch     Json     // Stores Partial<Status>
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("scheduled_status")
}

model BankHolidayCache {
  id        Int      @id @default(autoincrement())
  region    String
  year      Int
  payload   Json
  fetchedAt DateTime @default(now()) @map("fetched_at")

  @@unique([region, year])
  @@map("bank_holidays_cache")
}

// OAuth & Auth Models

model Client {
  clientId                String   @id @default(uuid()) @map("client_id")
  redirectUris            Json     @map("redirect_uris") // JSONB
  tokenEndpointAuthMethod String   @default("none") @map("token_endpoint_auth_method")
  clientName              String?  @map("client_name")
  grantTypes              String[] @map("grant_types")
  responseTypes           String[] @map("response_types")
  scope                   String?
  createdAt               DateTime @default(now()) @map("created_at")
  updatedAt               DateTime @updatedAt @map("updated_at")

  authCodes               AuthCode[]

  @@map("clients")
}

model Connection {
  id               String    @id @default(uuid())
  name             String?   @map("name")
  config           Json?     @map("config") // Public config
  encryptedSecrets String    @map("encrypted_secrets")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  sessions         Session[]
  authCodes        AuthCode[]

  @@map("connections")
}

model Session {
  id           String    @id @default(uuid())
  connectionId String    @map("connection_id")
  tokenHash    String    @map("token_hash")
  expiresAt    DateTime  @map("expires_at")
  revoked      Boolean   @default(false)
  createdAt    DateTime  @default(now()) @map("created_at")

  connection   Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model AuthCode {
  code                String    @id // Stores SHA-256 hash of the code
  connectionId        String    @map("connection_id")
  redirectUri         String    @map("redirect_uri")
  state               String?
  clientId            String    @map("client_id")
  codeChallenge       String    @map("code_challenge")
  codeChallengeMethod String    @map("code_challenge_method")
  expiresAt           DateTime  @map("expires_at")
  createdAt           DateTime  @default(now()) @map("created_at")

  connection          Connection @relation(fields: [connectionId], references: [id], onDelete: Cascade)
  client              Client     @relation(fields: [clientId], references: [clientId], onDelete: Cascade)

  @@map("auth_codes")
}

model UserConfig {
  id                String    @id @default(uuid())
  serverId          String    @map("server_id")
  configEnc         String    @map("config_enc")
  configFingerprint String?   @map("config_fingerprint")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  apiKeys           ApiKey[]

  @@map("user_configs")
  @@index([configFingerprint])
}

model ApiKey {
  id             String      @id @default(uuid())
  userConfigId   String      @map("user_config_id")
  keyHash        String      @unique @map("key_hash")
  createdIp      String?     @map("created_ip")
  lastUsedAt     DateTime?   @map("last_used_at")
  revokedAt      DateTime?   @map("revoked_at")
  createdAt      DateTime    @default(now()) @map("created_at")
  
  userConfig     UserConfig  @relation(fields: [userConfigId], references: [id], onDelete: Cascade)

  @@map("api_keys")
  @@index([keyHash])
}

model Cache {
  key       String   @id
  value     Json
  expiresAt DateTime @map("expires_at")

  @@map("cache")
}
